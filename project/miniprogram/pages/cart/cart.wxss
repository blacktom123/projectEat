.total{
  width: 100%;
  height: 200rpx;
  position: fixed;
  top:93%;
  display: flex;
  justify-content: space-between;
  background-color:white;
}
.total>view:nth-child(1){
  margin:0rpx 40rpx;
}
.total>view:nth-child(2){
  width: 200rpx;
  height: 100rpx;
  padding:0rpx 40rpx;
  background: #1296DB;
  text-align: center;
  line-height: 70rpx;
  color:white;
}