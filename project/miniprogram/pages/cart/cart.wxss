/* pages/cart/cart.wxss */
.shopping{
  width: 100rpx;
  height:100rpx;
}
.cart>view{
  font-size: 27rpx;
  margin-top:10rpx;
}
.cart{
  text-align: center;
  margin-top:300rpx;
}
.btn-shopping{
  border:1rpx solid #1296DB;
  width: 200rpx;
  height:60rpx;
  text-align: center;
  line-height: 60rpx;
  font-size: 27rpx;
  margin-top:60rpx;
  color: #1296DB;
}
.product-image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 15rpx;
  margin-left: 20rpx;
}
.productList{
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-radius: 15rpx;
  background:#e6e6e6;
  padding:20rpx 20rpx;
}
.productList>view:nth-child(1){
  display: flex;
}
.productList>view:nth-child(1)>view{
  margin-left: 20rpx;
}
.product-title{
  font-size: 26rpx;
  font-weight: bold;
  margin-bottom: 35rpx;
}
.product-price{
  font-size:20rpx;
}
.productList>view:nth-child(2){
  display: flex;
  align-items: center;

}
.changeCount>view:nth-child(1),.changeCount>view:nth-child(3){
  width: 30rpx;
  height:30rpx;
  background-color:#1296DB;
  border-radius: 100rpx;
  line-height: 30rpx;
  text-align: center;
  margin:0rpx 20rpx;
}
.unchecked{
  width: 30rpx;
  height:30rpx;
  border:1rpx solid black;
  border-radius: 100rpx;
  margin-top: 30rpx;
}
.checked>image{
  width: 34rpx;
  height:34rpx;
  border-radius: 100rpx;
  margin-top: 30rpx;
}
